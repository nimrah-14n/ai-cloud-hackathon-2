# Database
# For PostgreSQL (Neon or other):
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require
# For local SQLite:
# DATABASE_URL=sqlite:///./todo.db

# Authentication
# Generate a secure random secret (minimum 32 characters)
# You can use: python -c "import secrets; print(secrets.token_urlsafe(48))"
BETTER_AUTH_SECRET=your-secure-random-secret-here-min-32-chars

# Application
APP_ENV=development
DEBUG=True
CORS_ORIGINS=http://localhost:3000

# Server
HOST=0.0.0.0
PORT=8000
